{# templates/page/edit.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>İçerik Düzenle</title>
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
</head>
<body>
    <div class="container">
        <h1>İçerik Düzenle</h1>

        <form method="post">
            <label for="title">Başlık:</label>
            <input type="text" id="title" name="title" value="{{ content.title }}" required>

            <label for="content">İçerik:</label>
            <textarea id="content" name="content" rows="5" required>{{ content.content }}</textarea>

            <button type="submit" class="button save">Güncelle</button>
            <a href="{{ path('pages_list') }}" class="button back">Geri</a>
        </form>
    </div>
</body>
</html>
